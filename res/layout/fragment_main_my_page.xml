<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jaydi.ruby.RubyActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/light"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_my_page_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_my_page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="14sp" />

    <Button
        android:id="@+id/button_my_page_edit_profile"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_pink_red"
        android:text="@string/edit_profile"
        android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_my_page_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="2dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button_my_page_upgrade_level"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_pink_red"
        android:text="@string/upgrade_my_social_level"
        android:textColor="@color/white" />

</LinearLayout>